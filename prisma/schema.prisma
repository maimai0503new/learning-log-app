generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 1. usersテーブル
model User {
  id         String     @id @default(uuid())
  name       String
  avatar_url String?
  created_at DateTime   @default(now())
  posts      Post[]
  comments   Comment[]
  reactions  Reaction[]
}

model Book{
  id         String     @id @default(uuid())
  title      String 
  author     String?
  ndc        String?
  posts      Post[]

}

// 2. postsテーブル（学びの記録）
model Post {
  id         String     @id @default(uuid())
  user_id    String

  title      String
  content    String
  created_at DateTime   @default(now())
  updated_at DateTime   @default(now()) @updatedAt
  user       User       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  comments   Comment[]
  reactions  Reaction[]
  book_id    String?
  book       Book?      @relation(fields: [book_id],references:[id])

}

// 3. commentsテーブル
model Comment {
  id         String   @id @default(uuid())
  post_id    String
  user_id    String
  content    String
  created_at DateTime @default(now())
  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

// 4. reactionsテーブル
model Reaction {
  id            String   @id @default(uuid())
  post_id       String
  user_id       String
  reaction_type String
  created_at    DateTime @default(now())
  post          Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // 1人が同じ投稿に同じリアクションを連打できないようにする制約
  @@unique([post_id, user_id, reaction_type])
}